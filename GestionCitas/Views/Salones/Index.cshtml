@model IEnumerable<GestionCitas.Models.Salones>

@{
    ViewBag.Title = "Index";
}
<link href=" @Url.Content("~/Content/Site.css") " rel="stylesheet" type="text/css" />

<br />
<center><h2>Salones</h2></center>
<div class="btn btn-success">
    @Html.ActionLink("Crear nuevo", "Create", new { @class = "btn btn-success" }, new { @style = "color:white;" })
</div>
<br />
<br />

<table class="table table-striped table-bordered">
    <tr id="TblHeader">

        <th>
            @Html.DisplayNameFor(model => model.Seq)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCreado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Seq)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreado)
            </td>
            <td>
				<div class="btn-group-vertical">
					<div class="btn btn-primary">
						@Html.ActionLink("Editar   ", "Edit", new { id = item.Id }, new { @style = "color:white;" }) |
						@Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @style = "color:white;" }) |
						@Html.ActionLink("Borrar ", "Delete", new { id = item.Id }, new { @style = "color:white;" })
					</div>
				</div>
            </td>
        </tr>
    }

</table>
