@model GestionCitas.Models.Salones

@{
	ViewBag.Title = "Crear salones";
}

<link href=" @Url.Content("~/Content/Site.css") " rel="stylesheet" type="text/css" />

<br />
<center><h2>Crear Salones</h2></center>


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>Crear Salones</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		<div class="form-group">
			<div class="row">
				<div class="col-lg-offset-3">
					@Html.LabelFor(model => model.Salon, htmlAttributes: new { @class = "control-label col-md-2" })
					<div class="col-md-10">
						@Html.EditorFor(model => model.Salon, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.Salon, "", new { @class = "text-danger" })
					</div>
				</div>
			</div>
		</div>


		<center>
			<input type="submit" value="Crear" class="btn btn-success" style="width:450px" />
		</center>
	</div>
}
	@Html.ActionLink("Regresar a la lista de pacientes", "Index")

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
